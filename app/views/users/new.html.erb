<h1>New User</h1>

<!--  Form that allows user to register which then gets stored in our user table -->
<h2>Please Register: </h2>
  <form method="post" action="create">
    <label for="name"> First Name: </label>
      <input id="name" type="text" name="name" />
        </br>
        </br>
    <label for="address"> Address: </label>
      <input id="address" type="text" name="address" />
        </br>
        </br>
    <label for="city"> City: </label>
      <input id="city" type="text" name="city" />
        </br>
        </br>
    <label for="state"> State: </label>
      <input id="state" type="text" name="state" />
        </br>
        </br>
    <label for="postalcode"> Postal Code: </label>
      <input id="postalcode" type="integer" name="postalcode" />
        </br>
        </br>
    <label for="country"> Country: </label>
      <input id="country" type="text" name="country" />
        </br>
        </br>
    <label for="phonenumber"> Phone Number: </label>
      <input id="phonenumber1" type="integer" name="phonenumber1" />
      <input id="phonenumber2" type="integer" name="phonenumber2" />
      <input id="phonenumber3" type="integer" name="phonenumber3" />
        </br>
        </br>
    <label for="email"> Email: </label>
      <input id="email" type="text" name="email" />
        </br>
        </br>
    <label for="username"> User ID: </label>
      <input id="username" type="text" name="username" required/>
        </br>
        </br>
    <label for="password"> Password: </label>
      <input id="password" type="password" name="password" required/>
        </br>
        </br>
    <input id="Submit" type="Submit" name="Submit" value="Submit"/>
</form>


<% if flash[:notice2] %>
  <div class="notice"><%= flash[:notice2] %></div>
<% end %>
